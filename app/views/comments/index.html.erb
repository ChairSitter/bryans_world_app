<main>
    <section id="comments">
        <h1>Comments</h1>
        <p>Here are some comments from visitors to my site:</p>
        <div id="comments-grid">
            <% @comments.each do |comment| %>
            <div id="comment">
                <h2><%= comment.author %></h2>
                <p><%= comment.content %></p>
            </div>
            <%# add a delete comment button:%>
            <%= button_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
        </div>
    </section>
    <%= link_to "Leave a comment!", new_comment_path, "data-turbo-prefetch": "false"  %>
</main>