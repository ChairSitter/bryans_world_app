<main>
    <section id="new-comment">
        <h1>New Comment</h1>
        <p>Leave a comment below:</p>
        <%= form_for @comment do |f| %>
            <div class="field">
                <%= f.label :author %><br>
                <%= f.text_field :author %>
            </div>
            <div class="field">
                <%= f.label :content %><br>
                <%= f.text_area :content %>
            </div>
            <div class="actions">
                <%= f.submit %>
            </div>
        <% end %>
    </section>
</main>